<script>
  const staffIcons = document.querySelectorAll('.pa-staff-icon');
  const tabs = document.querySelectorAll('.tab-content');

  staffIcons.forEach(icon => {
    icon.addEventListener('click', () => {
      const tabId = icon.getAttribute('data-tab');

      tabs.forEach(tab => {
        tab.classList.remove('active');
      });

      document.getElementById(tabId).classList.add('active');
    });
  });

  // Optionnel : activer le premier onglet au chargement
  if (tabs.length) tabs[0].classList.add('active');
</script>
